.iconView{
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    

}
.cardIcon{
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
}
.cardInfo{
    padding-left: 110rpx;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: space-between;
}
.cardInfoNum{
    color: #333;
    font-size: 32rpx;
}
.cardInfoDesc{
    color: #666;
    font-size: 28rpx;
}

.moremore{
    padding-bottom: 20rpx;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    background: #ffffff;
}

.floor2{
    padding: 4px 10px;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
}
.floor2 .item{
    padding: 6px 0;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;  
    justify-content: space-between; 
    color: #333;
    font-size: 32rpx;
    border-bottom: 1px solid #e5e5e5;
}

