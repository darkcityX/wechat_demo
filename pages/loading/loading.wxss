/* pages/loading/loading.wxss */
.loading{
    position: absolute;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    z-index: 10;
    background: #fff;

}
.loading .loadingContainer{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-150%);
    width: 100rpx;
    height: 100rpx;
    font-size: 0;
    /* background: #FFFF33; */
}
.loading .loadingContainer .cube{
    width: 33.33%;
    height: 33.33%;
    float: left;
    animation: sk-cubeGridScaleDelay 1.3s infinite ease-in-out; 
    background-color: #666;
}

.loading .loadingContainer .cube1 {
    animation-delay: 0.2s; 
}
.loading .loadingContainer .cube2 {
    animation-delay: 0.3s; 
}
.loading .loadingContainer .cube3 {
    animation-delay: 0.4s; 
}
.loading .loadingContainer .cube4 {
    animation-delay: 0.1s; 
}
.loading .loadingContainer .cube5 {
    animation-delay: 0.2s; 
}
.loading .loadingContainer .cube6 {
    animation-delay: 0.3s; 
}
.loading .loadingContainer .cube7 {
    animation-delay: 0s; 
}
.loading .loadingContainer .cube8 {
    animation-delay: 0.1s; 
}
.loading .loadingContainer .cube9 {
    animation-delay: 0.2s; 
}

.loading .textContainer{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 0;
    text-align: center;
    /* background: red; */

}
.loading .textContainer .text,.loading .textContainer .crlice{
    color: #666;
    font-size: 16px;    
    font-weight: 600;
}

@keyframes sk-cubeGridScaleDelay {
  0%, 70%, 100% {
    -webkit-transform: scale3D(1, 1, 1);
            transform: scale3D(1, 1, 1); }
  35% {
    -webkit-transform: scale3D(0, 0, 1);
            transform: scale3D(0, 0, 1); 
    } 
}