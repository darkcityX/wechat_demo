/* pages/login/login.wxss */
.loginPage{
    box-sizing: border-box;
    padding: 0 40rpx;
    width: 100%;
    height: 100%;
    /* background: url(./../images/login-bg.png) no-repeat; */
    background-size: cover; 
    position: fixed;
    z-index: -10;
}
.top{
    margin: 25% 0;
    width: 100%;
}
.top image{
    width: 100%;
    height: 80rpx;
}

.loginModel{
    box-sizing: border-box;
}
.userName,.passWorld{
    margin-bottom: 20rpx;
    position: relative;
}
.userName label,.passWorld label{
    position: absolute;
    top: 0;
    left: 0;
    width: 60px;
    height: 40px;
    line-height: 40px;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    border: 1px solid transparent;
    border-radius: 25px 0 0 25px;
}
.userName input,.passWorld input,.btn-area button{
    box-sizing: border-box;
    padding-left: 60px;
    padding-right: 10px;
    width: 100%;
    height: 40px;
    color: #fff;
    font-size: 28rpx;
    border: 1px solid #e5e5e5;
    border-radius: 25px;
    /* background: transparent; */
}
.btn-area button{
    padding-left: 0;
    line-height: 40px;
}