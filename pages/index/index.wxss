/* pages/index/index.wxss */
.index{
    padding: 20rpx;
    background: #f5f5f5;
}

.index-top{
    padding: 80rpx 40rpx;
    color: #333;
    font-size: 0rpx;
    text-align: center;
}
.index-logo{
    margin-bottom: 20rpx;
    width: 100rpx;
    height: 100rpx;   
}
.index-desc{
    color: #999;
    font-size: 32rpx;
    text-indent: 32rpx;
}
.weui-agree__link{
    display: inline;
    color: #666;
    font-weight: bold;
}

.index-bd{

}
.list-item{
    margin-bottom: 20rpx;
    padding: 20rpx;
    background: #fff;
}
.list-item-bd-show{
    display: block;
}
.list-item-hd{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items:center;
    justify-content: space-between;    
}
.list-item-text{
    color: #333;
    font-size: 36rpx;
    align-items: center;

}
.list-item-img{
    width: 64rpx;
    height: 64rpx;
}
.list-item-bd{
    display: none;
    margin-top: 20rpx;

}
.list-item-evel{
    padding: 10rpx 0;
    border-bottom: 1px solid #e5e5e5;
}
.list-link{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
}
.list-item-evel-text{
    color: #333;
    font-size: 36rpx;
}
.icon-right{
    color: #999;
    font-size: 36rpx;
}
